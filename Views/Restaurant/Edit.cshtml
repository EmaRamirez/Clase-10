@using Clase6.ViewModels;

@model RestaurantEditViewModel
@{

}

<form method="post" asp-action="PostEdit" asp-controller="Restaurant">
    <div class="mb-3">
        <input type="text" asp-for="Id" hidden class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class=" mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input type="text" asp-for="Address" class="form-control">
    </div>
    <div class=" mb-3">
        <label asp-for="Mail" class="form-label"></label>
        <input type="text" asp-for="Mail" class="form-control">
    </div>
    <div class=" mb-3">
        <label asp-for="Phone" class="form-label"></label>
        <input type="text" asp-for="Phone" class="form-control">
    </div>
    <div class="mb-3">
        <select multiple asp-for="Menus">
            @foreach (var item in @Model.Menus)
            {
                <option>@item.Name</option>
            }
        </select>
    </div>
    <div>
        <button type="submit" class="btn btn-info">Modificar</button>
        <a asp-action="Index" class="btn btn-primary">Volver</a>
    </div>
</form>